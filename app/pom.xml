	<packaging>jar</packaging>
	<name>saml-md-aggregator package</name>
	<version>1.0.0-SNAPSHOT</version>
	<build>
		<defaultGoal>install</defaultGoal>
		<finalName>saml-md-aggregator</finalName>
		<plugins>
